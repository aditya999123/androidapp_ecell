<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_small"
    app:contentPadding="@dimen/padding_small"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

        <TextView
            android:id="@+id/blogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Blog Title"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/blogOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blogTitle"
            android:padding="8dp"
            android:text="Blog Owner"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/blogDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blogTitle"
            android:layout_toRightOf="@+id/blogOwner"
            android:gravity="end"
            android:padding="8dp"
            android:text="Blog Date"
            android:textColor="@color/colorAccent" />


        <ImageView
            android:id="@+id/blogImage"
            android:layout_width="match_parent"
            android:layout_height="224dp"
            android:layout_below="@+id/blogOwner"
            android:padding="8dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/blogBody"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/blogImage"
            android:padding="12dp"
            android:text="Blog Body"
            android:textColor="#424242" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
