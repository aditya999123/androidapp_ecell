<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/rounded_corner"
    android:elevation="10dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/blogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Blog Title"
        android:textSize="18dp"
        android:textColor="#000000"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/blogOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogTitle"
        android:padding="8dp"
        android:textColor="@color/colorAccent"
        android:text="Blog Owner" />

    <TextView
        android:id="@+id/blogDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/blogOwner"
        android:layout_below="@+id/blogTitle"
        android:padding="8dp"
        android:textColor="@color/colorAccent"
        android:text="Blog Date"
        android:gravity="end"
        />



    <ImageView
        android:id="@+id/blogImage"
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:layout_below="@+id/blogOwner"
        android:src="@mipmap/ic_launcher"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/blogBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blogImage"
        android:padding="12dp"
        android:text="Blog Body"
        android:textColor="#424242" />
</RelativeLayout>
