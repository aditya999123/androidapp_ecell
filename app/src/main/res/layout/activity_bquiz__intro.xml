<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="6"
    tools:context="app.startups.nitrr.ecell.ecellapp.BQuizNew.view.BQuizActivity">

    <LinearLayout
            android:id="@+id/question_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:padding="@dimen/padding_small"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4.8"
            card_view:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="114dp"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="Points"
                    android:textSize="28dp"

                    />

                <TextView
                    android:id="@+id/points"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.8" />
                <TextView
                    android:id="@+id/timer"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:gravity="center"
                    android:text="02:05 left"
                    android:textSize="30dp" />
                </LinearLayout>

                </android.support.v7.widget.CardView>




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="5">
                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:padding="@dimen/padding_small"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".8"
                    card_view:cardCornerRadius="4dp">
                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4.8"
                    >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="15dp"
                        android:text="Question: "
                        android:textStyle="bold"
                        android:id="@+id/question_no"
                        />


                    <ImageView
                        android:id="@+id/question_image"
                        android:layout_width="fill_parent"
                        android:layout_height="250dp"
                        android:src="@drawable/ecell_logo"
                        />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:background="@color/black"
                        />

                    <TextView
                        android:id="@+id/question_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="16dp"
                        android:text="Name the player who has the record of winning highest no. of olympic gold medals. Name the player who has the record of winning highest no. of olympic gold medals. Name the player who has the record of winning highest no. of olympic gold medals. Name the player who has the record of winning highest no. of olympic gold medals."
                        />
                </LinearLayout>
                </ScrollView>
                    </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:padding="@dimen/padding_small"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    card_view:cardCornerRadius="4dp">
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    >

                    <EditText
                        android:id="@+id/input_ans"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:hint="Enter your answer here"
                        android:visibility="invisible"
                        />

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent">
                            <ProgressBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/progressBar"
                                android:layout_centerInParent="true"
                                android:visibility="gone"/>

                            <RadioButton
                                android:id="@+id/rb1"
                                android:layout_width="160dp"
                                android:layout_height="40dp"
                                android:text="option 1" />

                            <RadioButton
                                android:id="@+id/rb2"
                                android:layout_width="160dp"
                                android:layout_height="40dp"
                                android:layout_toRightOf="@+id/rb1"
                                android:text="option 2" />

                            <RadioButton
                                android:id="@+id/rb3"
                                android:layout_width="160dp"
                                android:layout_height="40dp"
                                android:layout_below="@+id/rb1"
                                android:text="option 3" />

                            <RadioButton
                                android:id="@+id/rb4"
                                android:layout_width="160dp"
                                android:layout_height="40dp"
                                android:layout_below="@+id/rb2"
                                android:layout_toRightOf="@+id/rb3"
                                android:text="option 4" />


                        </RelativeLayout>


                    </RadioGroup>


                </RelativeLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/submit_button"
                    style="@style/Base.DialogWindowTitleBackground.AppCompat"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.2"
                    android:text="SUBMIT"
                    android:textSize="30dp"
                    android:gravity="center"

                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/message_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>
